[MASTER]
ignore=migrations
init-hook='import sys, os; sys.path.append("."); os.environ.setdefault("DJANGO_SETTINGS_MODULE", "kikimoraback.settings_dev"); import django; django.setup()'
load-plugins=pylint_django

[REPORTS]
output-format=colorized


[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    no-member,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-branches,
    too-many-statements,
    duplicate-code

[FORMAT]
max-line-length=100

[VARIABLES]
good-names=pk,id
